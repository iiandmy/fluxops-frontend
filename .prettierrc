{
	"singleQuote": true,
	"useTabs": true,
	"tabWidth": 2,
	"semi": true,
	"bracketSpacing": true,
	"printWidth": 80,
	"trailingComma": "es5",
	"endOfLine": "lf",
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^~/app/(.*)$",
		"^~/modules/(.*)$",
		"^~/components/(.*)$",
		"^~/api/(.*)$",
		"^~/store/(.*)$",
		"^~/utils/(.*)$",
		"^~/hooks/(.*)$",
		"^~/lib/(.*)$",
		"^~/assets/(.*)$",
		"^~/styles/(.*)$",
		"^[./].*(?<!\\.(c|le|sc)ss)$",
		"\\.(c|le|sc)ss$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
